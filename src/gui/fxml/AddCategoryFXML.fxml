<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="140.0" prefWidth="300.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.AddCategoryFXMLController">
    <VBox xmlns:fx="http://javafx.com/fxml" alignment="center" spacing="10.0" layoutX="20.0" layoutY="30.0" >
        <HBox spacing="10.0">
            <Label text="Name:" />
            <TextField fx:id="nameInput" />
        </HBox>
        <Label fx:id="errorLabel" />  
    </VBox>
    <Button fx:id="submitButton" layoutX="20.0" layoutY="90.0" text="Submit" 
            onAction="#handleSubmitButtonAction" mnemonicParsing="false" />
</AnchorPane>
