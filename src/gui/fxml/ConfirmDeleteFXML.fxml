<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="175.0" prefWidth="350.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.ConfirmDeleteFXMLController">
    <VBox spacing="25.0" layoutY="40.0" >
        <Label text="Are you sure you want to remove this item?" />
        <HBox spacing="20.0">
            <Button fx:id="confirmButton" onAction="#handleConfirmButtonAction" text="Yes" /> 
            <Button fx:id="cancelButton" onAction="#handleCancelButtonAction" text="Cancel" />
        </HBox>
    </VBox>
</AnchorPane>
