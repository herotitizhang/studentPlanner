<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="300.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.AddEventFXMLController">
    <GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
        <Label text="Name:"
            GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="nameInput"
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Notes:"
            GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="textInput"
            GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Start Time:"
            GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="startTimeInput"
            GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="End Time:"
            GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="endTimeInput"
            GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label text="Category:"
            GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="categoryInput"
            GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <Label text="Alert"
            GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <CheckBox fx:id="alertBoolInput"
            GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        <Label text="Alert Text"
            GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <TextField fx:id="alertTextInput"
            GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        <Label text="Alert Time"
            GridPane.columnIndex="0" GridPane.rowIndex="8"/>
        <TextField fx:id="alertTimeInput"
            GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    </GridPane>
    <Button fx:id="submitButton" layoutX="20.0" layoutY="330.0" text="Submit" 
            onAction="#handleSubmitButtonAction" mnemonicParsing="false" />
</AnchorPane>
