<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane id="AnchorPane" prefHeight="200.0" prefWidth="300.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.SettingsFXMLController">
    <GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>    
        <Button fx:id="requestAuthButton" text="Request Authentication" onAction="#handleRequestAuthButtonAction"
            GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"  />
        <Label text="Authentication Code:" fx:id="authLabel" 
            GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="authInput" 
            GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button fx:id="submitButton" text="Submit" onAction="#handleSubmitButtonAction"
            GridPane.columnIndex="0" GridPane.rowIndex="3" />
    </GridPane>
</AnchorPane>
